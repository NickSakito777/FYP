<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 顶部工具栏 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?android:attr/colorPrimary"
        android:elevation="4dp"
        android:title="打卡点"
        android:titleTextColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 整体内容区域 - 包含侧边栏和主内容区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 左侧垂直侧边栏 -->
        <LinearLayout
            android:id="@+id/sidebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F5F5"
            android:elevation="2dp">

            <!-- 侧边栏按钮1 - 默认选中 -->
            <Button
                android:id="@+id/sidebar_btn_1"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="1"
                android:textSize="18sp"
                android:background="@drawable/sidebar_button_selected" />

            <!-- 侧边栏按钮2 -->
            <Button
                android:id="@+id/sidebar_btn_2"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:background="@drawable/sidebar_button_normal"
                android:text="2"
                android:textSize="18sp" />

            <!-- 侧边栏按钮3 -->
            <Button
                android:id="@+id/sidebar_btn_3"
                android:layout_width="64dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                android:text="3"
                android:textSize="18sp"
                android:textColor="#FF0000"
                android:background="@drawable/sidebar_button_normal" />
        </LinearLayout>

        <!-- 右侧内容区域 -->
        <FrameLayout
            android:id="@+id/content_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <!-- 默认显示的内容 - 任务列表 -->
            <ScrollView
                android:id="@+id/content_tasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/activityList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <!-- 任务列表内容将在这里动态添加 -->
                    
                    <!-- 底部按钮 -->
                    <Button
                        android:id="@+id/btn_generate_task"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:padding="12dp"
                        android:text="生成今日学习任务"
                        android:textSize="18sp"
                        android:backgroundTint="@color/button_color"/>
                </LinearLayout>
            </ScrollView>

            <!-- 其他内容布局，初始隐藏 -->
            <LinearLayout
                android:id="@+id/content_page2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="gone">
                
                <!-- 简化聊天界面，直接内嵌布局而不是使用include -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F5F5F5">

                    <!-- 标题区域 -->
                    <TextView
                        android:id="@+id/chatTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:elevation="2dp"
                        android:padding="12dp"
                        android:text="与AI助手对话"
                        android:textAlignment="center"
                        android:textColor="#212121"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- 消息列表区域 -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/chatRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="8dp"
                        android:clipToPadding="false"
                        android:paddingBottom="8dp"
                        app:layout_constraintBottom_toTopOf="@id/inputContainer"
                        app:layout_constraintTop_toBottomOf="@id/chatTitle" />

                    <!-- 加载指示器 - 跳动的点点 -->
                    <include
                        android:id="@+id/typingIndicator"
                        layout="@layout/view_typing_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/inputContainer" />

                    <!-- 输入区域 -->
                    <LinearLayout
                        android:id="@+id/inputContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFFF"
                        android:elevation="4dp"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <!-- 添加图片选择按钮 -->
                        <ImageButton
                            android:id="@+id/imagePickerButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="选择图片"
                            android:src="@android:drawable/ic_menu_gallery"
                            app:tint="#2196F3" />

                        <EditText
                            android:id="@+id/messageInput"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/edit_text_background"
                            android:hint="输入消息..."
                            android:inputType="textMultiLine"
                            android:maxLines="4"
                            android:minHeight="48dp"
                            android:padding="10dp"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/sendButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginStart="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="发送消息"
                            android:src="@android:drawable/ic_menu_send"
                            app:tint="#2196F3" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/content_page3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="0dp"
                android:visibility="gone">
                
                <!-- 替换为FrameLayout以便动态加载特工任务布局 -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- 特工任务内容将在这里动态加载 -->
                </FrameLayout>
            </LinearLayout>

            <!-- 添加左下角的拍照按钮，默认隐藏 -->
            <ImageButton
                android:id="@+id/photoButton"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_margin="16dp"
                android:background="@drawable/circle_button_background"
                android:contentDescription="拍照验证"
                android:elevation="6dp"
                android:padding="12dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_camera"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="#FFFFFF" />
        </FrameLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
