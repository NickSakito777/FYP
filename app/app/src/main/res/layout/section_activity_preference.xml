<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="三、时间管理"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <!-- 时间模式单选组 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="日常时间安排更接近以下哪种模式？"
        android:layout_marginBottom="4dp"/>

    <RadioGroup
        android:id="@+id/rgTimePattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rbStrictSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="严格作息（固定学习时段）"/>

        <RadioButton
            android:id="@+id/rbFlexibleSchedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="灵活调整（根据活动安排）"/>

        <RadioButton
            android:id="@+id/rbNightActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="夜间活跃（偏好晚上活动）"/>
    </RadioGroup>

    <!-- 新任务时段多选组 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在以下哪些时段容易接受新任务？（多选）"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 第一行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <CheckBox
                android:id="@+id/cbMorning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="早上（9:00-12:00）"/>

            <CheckBox
                android:id="@+id/cbAfternoon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下午（14:00-18:00）"/>
        </LinearLayout>

        <!-- 第二行 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <CheckBox
                android:id="@+id/cbNight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="晚间（18:00-23:00）"/>

            <CheckBox
                android:id="@+id/cbEvening"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="凌晨（23:00-4:00）"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
